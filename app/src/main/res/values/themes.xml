<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PSPLinuxController" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#533483</item>
        <item name="colorPrimaryVariant">#16213e</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#e94560</item>
        <item name="colorSecondaryVariant">#0f3460</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Fullscreen theme for controller activity -->
    <style name="Theme.PSPLinuxController.Fullscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#533483</item>
        <item name="colorPrimaryVariant">#16213e</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">#e94560</item>
        <item name="colorSecondaryVariant">#0f3460</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">#16213e</item>
        <item name="android:navigationBarColor">#1a1a2e</item>
    </style>
</resources>